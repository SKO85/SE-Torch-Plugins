<UserControl x:Class="SKO.GridPCULimiter.GridPCULimiterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SKO.GridPCULimiter"
             mc:Ignorable="d" d:DesignWidth="800" Height="auto">
    <Grid VerticalAlignment="Top">
        <TabControl VerticalAlignment="Top">
            <TabItem Header="Grid PCU Limiter Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="200" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="Grid PCU Limiter Configuration"
                                   FontWeight="Bold" FontSize="16" Margin="5,5,5,15" />

                        <!-- Enable Plugin -->
                        <TextBlock Grid.Row="1" Grid.Column="0"
                                   Text="Enable PCU Limiter:"
                                   VerticalAlignment="Center" Margin="5" />
                        <CheckBox Grid.Row="1" Grid.Column="1"
                                  IsChecked="{Binding Enabled}"
                                  VerticalAlignment="Center" Margin="5" />

                        <!-- Max Grid PCU -->
                        <TextBlock Grid.Row="2" Grid.Column="0"
                                   Text="Max Grid PCU:"
                                   VerticalAlignment="Center" Margin="5" />
                        <TextBox Grid.Row="2" Grid.Column="1"
                                 Text="{Binding MaxGridPCU}"
                                 Width="100" HorizontalAlignment="Left" Margin="5" />

                        <!-- Ignore NPC Grids -->
                        <TextBlock Grid.Row="3" Grid.Column="0"
                                   Text="Ignore NPC Grids:"
                                   VerticalAlignment="Center" Margin="5" />
                        <CheckBox Grid.Row="3" Grid.Column="1"
                                  IsChecked="{Binding IgnoreNPCGrids}"
                                  VerticalAlignment="Center" Margin="5" />

                        <!-- Allow Projection -->
                        <TextBlock Grid.Row="4" Grid.Column="0"
                                   Text="Allow Projection:"
                                   VerticalAlignment="Center" Margin="5" />
                        <CheckBox Grid.Row="4" Grid.Column="1"
                                  IsChecked="{Binding AllowProjection}"
                                  VerticalAlignment="Center" Margin="5" />

                        <!-- Allow Merge -->
                        <TextBlock Grid.Row="5" Grid.Column="0"
                                   Text="Allow Merge:"
                                   VerticalAlignment="Center" Margin="5" />
                        <CheckBox Grid.Row="5" Grid.Column="1"
                                  IsChecked="{Binding AllowMerge}"
                                  VerticalAlignment="Center" Margin="5" />

                        <!-- Include Connected Grids PCU -->
                        <TextBlock Grid.Row="6" Grid.Column="0"
                                   Text="Include Connected Grids PCU:"
                                   VerticalAlignment="Center" Margin="5" />
                        <CheckBox Grid.Row="6" Grid.Column="1"
                                  IsChecked="{Binding IncludeConnectedGridsPCU}"
                                  VerticalAlignment="Center" Margin="5" />

                        <!-- Max Number of Connected Grids -->
                        <TextBlock Grid.Row="7" Grid.Column="0"
                                   Text="Max Number of Connected Grids:"
                                   VerticalAlignment="Center" Margin="5" />
                        <TextBox Grid.Row="7" Grid.Column="1"
                                 Text="{Binding MaxNumberOfConnectedGrids}"
                                 Width="100" HorizontalAlignment="Left" Margin="5" />

                        <!-- Damage Connectors -->
                        <TextBlock Grid.Row="8" Grid.Column="0"
                                   Text="Damage Connectors:"
                                   VerticalAlignment="Center" Margin="5" />
                        <CheckBox Grid.Row="8" Grid.Column="1"
                                  IsChecked="{Binding DamageConnectors}"
                                  VerticalAlignment="Center" Margin="5" />

                        <!-- Disable Welders Within Meters -->
                        <TextBlock Grid.Row="9" Grid.Column="0"
                                   Text="Disable Welders Within Meters:"
                                   VerticalAlignment="Center" Margin="5" />
                        <TextBox Grid.Row="9" Grid.Column="1"
                                 Text="{Binding DisableWeldersWithinMeters}"
                                 Width="100" HorizontalAlignment="Left" Margin="5" />

                        <!-- Exempt Steam IDs Section -->
                        <TextBlock Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="Exempt Steam IDs"
                                   FontWeight="Bold" FontSize="14" Margin="5,15,5,5" />

                        <!-- Steam IDs DataGrid -->
                        <DataGrid x:Name="exemptSteamIdsDataGrid"
                                  Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2"
                                  ItemsSource="{Binding ExemptSteamIds}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  Margin="5">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Steam ID" Binding="{Binding .}" Width="*" />
                                <DataGridTemplateColumn Header="Delete" Width="60">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Delete" Click="DeleteSteamId_Click" />
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Add Steam ID Button -->
                        <Button Grid.Row="12" Grid.Column="0"
                                Content="Add Steam ID"
                                Click="AddSteamId_Click"
                                Width="120" HorizontalAlignment="Left" Margin="5" />

                        <!-- Save Button -->
                        <Button Grid.Row="12" Grid.Column="1"
                                Content="Save Config"
                                Click="SaveButton_OnClick"
                                Width="100" HorizontalAlignment="Left" Margin="5" />

                        <TextBlock Grid.Row="13" Grid.Column="0" Grid.ColumnSpan="2" Text="Developer &amp; Credits:" FontWeight="Bold" FontSize="14" Margin="5,25,5,5" />
                        <TextBlock Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="2" Text="Plugin developer: SKO" Margin="5, 0"  />
                        <TextBlock Grid.Row="15" Grid.Column="0" Grid.ColumnSpan="2" Text="Thanks to Sargonnas for the Configuration UI &amp; 'Excemption per player' feature!" Margin="5, 0"  />
                        
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>